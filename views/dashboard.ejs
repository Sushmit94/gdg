<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Dashboard</title>
</head>
<body class="bg-zinc-900 text-white min-h-screen">
  <h1 class="text-3xl font-bold mt-8 mb-6 ml-10">You can add payment here</h1>
  <div class="p-10">
    <div class="bg-zinc-800 p-8 rounded-lg shadow-lg w-full max-w-md">
      <form action="payment" method="post" class="flex flex-col gap-4">
        <input type="text" placeholder="amount" name="amount" class="px-4 py-2 rounded-lg bg-zinc-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
        <input type="text" placeholder="description" name="description" class="px-4 py-2 rounded-lg bg-zinc-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
        <input type="text" placeholder="date" name="date" class="px-4 py-2 rounded-lg bg-zinc-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
        <input type="submit" value="Add payment" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg cursor-pointer transition">
      </form>
    </div>
  </div>
  <!-- Payments section -->
  <div class="payments-section mt-20 px-10">
    <h3 class="text-zinc-300 text-2xl font-semibold mb-6">Your Payments</h3>
    <div class="payments-container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if (user.payments && user.payments.length > 0) { %>
        <% user.payments.forEach(function(payment) { %>
          <div class="payment-card bg-zinc-800 border border-zinc-700 rounded-lg p-6 shadow-md flex flex-col gap-2 hover:shadow-lg transition">
            <div class="flex items-center justify-between mb-2">
              <span class="text-blue-400 font-bold text-lg">$<%= payment.amount %></span>
              <span class="text-xs text-zinc-400"><%= payment.date %></span>
            </div>
            <p class="text-zinc-200 text-base mb-2"><%= payment.description %></p>
            <div class="flex gap-4 mt-2">
              <a class="text-blue-500 hover:underline" href="#">Edit</a>
              <a class="text-red-500 hover:underline" href="#">Delete</a>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-zinc-500 mt-4">You haven't added any payments yet.</p>
      <% } %>
    </div>
  </div>
</body>